<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dmitryrisov.dev.finitestatemachines.MainActivity">

    <TextView
        android:id="@+id/tv_alarm_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disarmed"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:background="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="-66dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_alarm_state"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/btn_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/lock"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="143dp" />

        <Button
            android:id="@+id/btn_lockx2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/lockx2"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="143dp" />

        <Button
            android:id="@+id/btn_unlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unlock"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="143dp" />

        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_unlockx2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/unlockx2"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="143dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
